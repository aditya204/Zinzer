<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_marginVertical="5dp"


    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_round_image"

        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/horizontal_scroll_item_layout_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/horizontal_scroll_item_layout_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:layout_marginStart="8dp"


            android:scaleType="centerCrop"


            app:srcCompat="@drawable/chicken_curry" />


    </LinearLayout>


    <TextView
        android:id="@+id/horizontal_scroll_item_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"

        android:text="Chicken Curry"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/horizontal_scroll_item_layout_rating"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/horizontal_scroll_item_layout_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="36dp"

        android:text="north indian"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_scroll_item_layout_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/horizontal_scroll_item_layout_name"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_item_layout_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/horizontal_scroll_item_layout_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:text="Description"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_scroll_item_layout_categoryName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/horizontal_scroll_item_layout_categoryName"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_item_layout_categoryName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/horizontal_scroll_item_layout_rating"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="#32A352"
        android:text="4.5"
        android:textAlignment="center"
        android:textColor="#ffffff"

        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_scroll_item_layout_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_scroll_item_layout_name"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>